

#ifndef INC_GPS_H_

	#include "main.h"

	#define INC_GPS_H_
	#define GPS_MESSAGE_LENGTH 36
	#define LATITUDE_OFFSET 33
	#define LONGITUDE_OFFSET 124


	typedef struct{
		USART_TypeDef* UART;
		DMA_TypeDef* DMA;
		uint8_t gps_raw_buf[GPS_MESSAGE_LENGTH+1];
	}GPS_RAW_MESSAGE;


	typedef struct{
		int32_t lon;
		int32_t lat;

		int32_t longitude_deg,longitude_min;
		float longitude_sec;

		int32_t latitude_deg,latitude_min;
		float latitude_sec;

		float sec_lon;
		float sec_lat;
	}GPS_DATA;


	void GPS_DMA_init(GPS_RAW_MESSAGE* gps_raw_message, USART_TypeDef* UART,DMA_TypeDef* DMA,uint32_t DMA_STREAM);
	void GPS_Parsing(GPS_RAW_MESSAGE* message, GPS_DATA* gps_data, int* recv_cnt, int* err_cnt);



#endif /* INC_GPS_H_ */
