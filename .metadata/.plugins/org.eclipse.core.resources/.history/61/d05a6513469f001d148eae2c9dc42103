#ifndef _QUATERNION_H
#define _QUATERNION_H

#include "main.h"
#include <math.h>

#define _180_DIV_PI 		57.295779515f // = 180 / PI
#define PI 					3.1415926535897932f
#define RAD2DEG             57.2957914f
#define DEG2RAD             0.017453289f
#define ALPHA               0.98f //0.996                     // complementary filter coefficient
#define BETA                0       // 0.9                       // complementary filter coefficient
#define CAL_COUNTER         1000

#define GYRO_DEGFSEL3 ‭    0.06103515625‬f                	// 0.06103515625‬  = (4000/65536)
#define ACC_DEGFSEL3 ‭     0.000488281f                	// 0.000488281  = (32/65536)




float gyroBias[3] 			= {0, 0, 0};
float accelBias[3] 			= {0, 0, 0}; // Bias corrections for gyro and accelerometer
float beta 					= 0.604599788f;
float zeta 					= 0.030229989f;
float deltat 				= 0.000004f;                              // integration interval for both filter schemes



extern float Roll;
extern float Pitch;
extern float Yaw;
extern float q[4];            // vector to hold quaternion

void Quaternion_Update(float* q);
float invSqrt(float x);

